<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/frame_layout_parent"
        android:layout_width="@dimen/slider_handle_group_parent_width"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/handle_view"

            android:layout_width="@dimen/slider_handle_group_diameter"
            android:layout_height="@dimen/slider_handle_group_diameter"
            android:layout_marginTop="@dimen/slider_handle_group_margin_vertical"
            android:layout_marginBottom="@dimen/slider_handle_group_margin_vertical"
            android:layout_gravity="center_horizontal"

            android:background="@color/slider_handle"
            android:elevation="1dp" />

        <TextView
            android:id="@+id/on_move_label_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@{@dimen/slider_handle_diameter + @dimen/slider_handle_margin_vertical + 5f*@dimen/dimen_1dp}"
            android:layout_gravity="center_horizontal"
            android:alpha="0"
            android:maxLines="1"
            android:textAlignment="center"

            android:text="0%"
            android:textSize="12sp"
            tools:text="0%" />

    </FrameLayout>
</layout>